<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ztesoft.brain.simple.mapper.UserMapper">
	<resultMap id="BaseResultMap" type="com.ztesoft.brain.simple.podomain.User">
		<id column="id" property="id" jdbcType="VARCHAR" />
		<result column="name" property="name" jdbcType="VARCHAR" />
	</resultMap>

	<sql id="Base_Column_List">
		t.id as id,
		t.name as name
	</sql>

	<insert id="insert" parameterType="com.ztesoft.brain.simple.podomain.User">
		INSERT INTO
			sample.user (id, name)
		VALUES
			(#{id, jdbcType=VARCHAR},
			 #{name, jdbcType=VARCHAR})
	</insert>
	
	<update id="delete" parameterType="java.lang.String">
		DELETE FROM
			sample.user WHERE id = #{id}
	</update>

	<update id="update" parameterType="com.ztesoft.brain.simple.podomain.User">
		UPDATE sample.user set 
			name = #{name, jdbcType=VARCHAR}
		WHERE
		    id = #{id, jdbcType=VARCHAR}
	</update>

	<select id="select" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List" />
		FROM
			sample.user t
		WHERE
			t.id = #{id}
	</select>
	
	<select id="selectAll" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List" />
		FROM
			sample.user t
	</select>	
</mapper>